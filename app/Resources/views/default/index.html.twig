{% extends 'base.html.twig' %}

{% block body %}

    <msky-application>
        <div class="msky-progress">
            <div class="msky-progress__loading">
                Loading...
                <i class="fa fa-spinner fa-pulse"></i>
            </div>
            <progress id="msky-start-app-progress"
                      class="progress progress-striped progress-info progress-animated" value="15" max="100">
            </progress>
        </div>
    </msky-application>
{% endblock %}

{% block javascripts %}
    <script>
        (function () {
            var p = document.getElementById("msky-start-app-progress");
            if (p) {
                setTimeout(function () {
                    p.value = 45;
                }, 1000);
                setTimeout(function () {
                    p.value = 90;
                }, 3000);
            }
        })();
    </script>
    <script src="{{ asset('assets/compiled/polyfills.js','webpack') }}"></script>
    <script src="{{ asset('assets/compiled/app.js','webpack') }}"></script>
{% endblock %}
